<MyLayout>
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Splitter:
			sizable_from: 'bottom' #comes after the button
			Button:
				text: "Hello Guys"
				font_size: 32

		Label:
			text: "This is some text!"
			font_size: 32

		
		Splitter:
			sizable_from: 'top' #bottom
			Button:
				text: "Welcome to widget_resizing_container"
				font_size: 32

		GridLayout:
			cols:2

			Button: 
				text: "Left"
				font_size: 32

			Splitter:
				sizable_from: 'left' #right

				Button: 
					text: "Right"
					font_size: 32